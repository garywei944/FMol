# list of all modules used for this project
# if you are using a computer without gpu don't install tensorflow-gpu but just tensorflow
# if the default framework used by keras is Theanos use the following line to switch to tensorflow
# export KERAS_BACKEND='tensorflow'

conda create -n p3 python=3  anaconda
conda activate p3
conda install -c openbabel openbabel
conda install -c rdkit rdkit
conda install -c anaconda tensorflow-gpu
conda install -c conda-forge keras
conda install -c omnia cclib
pip install pptree
conda install -c anaconda joblib
conda install -c conda-forge tensorboard
